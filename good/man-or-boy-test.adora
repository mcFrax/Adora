type IF = () -> Int

let a = fn(Int k, IF x1, IF x2, IF x3, IF x4, IF x5) -> Int:
    let b = fn () -> Int:
        k = k-1
        return a(k, b, x1, x2, x3, x4)
    if k <= 0:
        return x4() + x5()
    else:
        return b()

let x = fn(Int i) -> (Int _) -> Int:
    return fn(Int _) -> Int:
        return i

var ii = 0
while ii < 11:
    print a(ii, x(1), x(-1), x(-1), x(1), x(0))
    ii = ii+1

